@model IEnumerable<Web_4.Models.HoaDonDatMon>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="d-flex align-items-center">
    @Html.ActionLink("Create New", "Create")
    <form method="get" class="d-flex align-items-center" style="margin-left: 30px">
        <div class="form-floating" style="margin-right: 10px">
            <input name="tenKH" id="tenKH" placeholder="" class="form-control"/>
            <label class="form-label" for="tenKH">Nhập tên khách hàng</label>
        </div>
        <button class="btn btn-outline-dark">Tìm kiếm</button>
    </form>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NgayDat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KhachHang.HoTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MonAn.TenMon)
        </th>
        <th>Thành tiền</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NgayDat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhachHang.HoTen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MonAn.TenMon)
        </td>
        <td>
            @((item.MonAn != null ? (item.SoLuong * item.MonAn.DonGia).Value.ToString("n0") : "0") + " VND")
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaHD }) |
            @Html.ActionLink("Details", "Details", new { id=item.MaHD }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MaHD })
        </td>
    </tr>
}

</table>
